<!-- head area start-->
<%- include('../partials/head.ejs') %>
  <!-- head area end -->
  <!-- site header
        ================================================== -->
  <%- include('../partials/dashbord-nav.ejs') %>
    <!-- end s-header -->

    <div class="s-content">
      <%- include('../partials/custom-alert.ejs') %>
        <div class="masonry-wrap">
          <!-- start masonry-wrap -->
          <div class="blog-post">
            <h1 class="h2">Blog Overview
            </h1>
          </div>

          <div class="masonry">
            <!-- start masonry -->

            <div class="grid-sizer">

              <article class="masonry__brick entry format-quote animate-this">

                <div class="card">
                  <blockquote>
                    <p>
                      <%= posts.length===0? '00' : posts.length %>
                    </p>

                    <cite>Posts</cite>
                  </blockquote>
                </div>

              </article>
              <article class="masonry__brick entry format-quote animate-this">

                <div class="card">
                  <blockquote>
                    <p>
                      <%= comments.length===0 ? '00' : comments.length %>
                    </p>
                    <cite>
                      comments
                    </cite>
                  </blockquote>
                </div>

              </article>

            </div>
          </div>

        </div> <!-- end masonry-wrap -->


        <div class="masonry-wrap">
          <!-- start masonry-wrap -->
          <div class="blog-post">
            <h1 class="h2">My All Posts
            </h1>
          </div>

          <div class="masonry">
            <div class="grid-sizer"></div>
            <% if(posts.length===0) {%>
              <p>There is nothing show</p>
              <%} else{%>
                <% for (let post of posts.reverse()) {%>
                  <article class="masonry__brick entry format-standard animate-this">
                    <div class="entry__thumb">
                      <a href="/post-view/<%= post._id %> " class="entry__thumb-link">
                        <% if(!post.thumbnail) {%>
                          <img src="images/thumbs/thumbnail-placeholder600.png" alt="post thumbnail">

                          <% } else{%>
                            <img src="<%= post.thumbnail %>" srcset="" alt="" />
                            <% } %>
                      </a>
                    </div>

                    <div class="entry__text">
                      <div class="entry__header">
                        <h2 class="entry__title">
                          <a href="/post-view/<%= post._id %> ">
                            <%= post.title %>
                          </a>
                        </h2>
                        <div class="entry__meta">
                          <span class="entry__meta-cat">
                            <% post.tags.forEach(item=> { %>
                              <a href="single-standard.html">
                                <%= item %>
                              </a>
                              <% }) %>
                          </span>
                          <span class="entry__meta-date">
                            <a href="single-standard.html">
                              <%= moment(post.createdAt)%>
                            </a>
                          </span>
                        </div>
                      </div>
                      <div class="entry__excerpt">
                        <p>
                          <%= truncate(post.body) %>
                        </p>

                      </div>
                    </div>
                  </article>
                  <!-- end article -->

                  <% } %>

                    <%}%>




          </div>

        </div> <!-- end masonry-wrap -->


    </div> <!-- end s-content -->

    <%- include('../partials/footer.ejs') %>
      <!-- footer end -->